<%= form_for(post, url: url) do |f| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-3 text-center">

      <div class="card">
        <div class="card-block">
          <% if @post.new_record? %>
            <h4 class="card-title">New post</h4>
          <% else %>
            <h4 class="card-title">
              <b>Edit</b>
              <span class="thin-text"><%= "'#{@post.name}'" %></span>
            </h4>
          <% end %>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <div class="field">
              <%= f.label :title %>
              <%= f.text_field :name, class: 'form-control' %>
            </div>
          </li>
          <li class="list-group-item">
            <div class="field">
              <%= f.file_field :image %>
            </div>
          </li>
        </ul>

        <div class="actions">
          <%= f.submit "Save blog post", class: 'btn btn-success btn-lg' %>
        </div>
      </div>

      <% if @post.persisted? %>
        <%= link_to 'Show', @post %> |
      <% end %>

      <%= link_to 'Back', authors_posts_path %>
    </div>
    <div class="col-md-9">
      <div class="field">
        <%= f.text_area :content %>
      </div>
    </div>
  </div>
<% end %>
