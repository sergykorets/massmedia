<%= form_for(post, url: url) do |f| %>

  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-3 text-center">

      <div class="card text-center">
        <div class="card-block">
          <% if @post.new_record? %>
            <h4 class="card-title">New post</h4>
          <% else %>
            <h4 class="card-title">
              <b>Edit</b>
              <span class="thin-text"><%= "'#{@post.name}'" %></span>
            </h4>
          <% end %>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
              <%= f.label :title %>
              <%= f.text_field :name, class: 'form-control' %>
          </li>
          <li class="list-group-item">
              <%= f.label 'Categories' %>
              <%= f.collection_select :tag_ids, Tag.order(:name), :id, :name, {}, {multiple: true, class: 'selectize'} %>
          </li>
          <li class="list-group-item">
              <%= f.file_field :image %>
          </li>
        </ul>

        <div class="list-group-item">
          <%= f.submit "Save blog post", class: 'btn btn-success btn-lg', id: 'submit-post' %>
        </div>
      </div>

      <% if @post.persisted? %>
        <%= link_to 'Show', @post %> |
      <% end %>

      <%= link_to 'Back', authors_posts_path %>
    </div>
    <div class="col-md-9">
      <div class="field">
        <%= f.text_area :content, id: 'textarea' %>
      </div>
    </div>
  </div>
<% end %>

<div class="modal fade category-modal tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
  <div class="modal-dialog modal-sm" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">*</span></button>
        <h4 class="modal-title" id="mySmallModalLabel">Add category</h4>
      </div>
      <div class="modal-body">
        <%= form_for Tag.new, url: authors_categories_path do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.submit "Create category", class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

