<% provide(:page_title, 'All posts') %>
<% provide(:author, 'active') %>

<div class="row">
  <div style="margin-bottom: 2%;">
    <%= link_to 'New post', new_authors_post_path, class: 'btn btn-primary btn-lg' %>
  </div>
	<table class="table table-striped">
    <tr>
      <th>Title</th>
      <th>Categories</th>
      <th colspan="3">Actions</th>
    </tr>
    <%= render @posts %>
  </table>
</div>